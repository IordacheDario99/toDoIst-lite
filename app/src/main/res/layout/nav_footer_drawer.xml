<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@color/light_dark_gray"
        >


        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:paddingLeft="20dp"
            android:text="Type your name here "
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/add_new_task"
            android:layout_width="97dp"
            android:layout_height="33dp"
            android:layout_below="@+id/text"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="Add task"
            android:textSize="10dp"
            android:textAllCaps="false"

            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="#FF1744" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="97dp"
            android:layout_height="33dp"
            android:layout_below="@+id/text"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#FF1744" />

        <Button
            android:id="@+id/btn_priority_3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text"
            android:layout_marginStart="144dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/add_new_task"
            android:layout_toRightOf="@+id/add_new_task"

            android:text="P3"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#00B0FF" />

        <Button
            android:id="@+id/btn_priority_1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/add_new_task"
            android:layout_toRightOf="@+id/add_new_task"
            android:text="P1"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#FF1744" />

        <Button
            android:id="@+id/btn_priority_2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text"
            android:layout_marginStart="89dp"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/add_new_task"
            android:layout_toRightOf="@+id/add_new_task"
            android:text="p2"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#F19215" />


    </RelativeLayout>





</RelativeLayout>