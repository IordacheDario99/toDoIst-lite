<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/newTaskText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:hint="New task" />

    <Button
        android:id="@+id/newTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTaskText"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/priority_3_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:layout_toLeftOf="@+id/newTaskButton"
        app:backgroundTint="#00B0FF"
        android:text="3"
        android:textSize="16dp"
        app:elevation="10dp" />

    <Button
        android:id="@+id/priority_1_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="194dp"
        android:layout_marginRight="194dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:layout_toLeftOf="@+id/newTaskButton"
        app:backgroundTint="#FF1744"
        android:text="1"
        android:textSize="16dp"
        app:elevation="10dp" />

    <Button
        android:id="@+id/priority_2_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:layout_toLeftOf="@+id/newTaskButton"
        app:backgroundTint="#FFEA00"
        android:text="2"
        android:textSize="16dp"
        app:elevation="10dp"/>


</RelativeLayout>